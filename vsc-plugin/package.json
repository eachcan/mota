{
  "name": "mota-language",
  "displayName": "Mota Language",
  "description": "Mota 语言支持",
  "version": "0.2.3",
  "publisher": "eachcan",
  "engines": {
    "vscode": "^1.60.0"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:mota",
    "onLanguage:mota-template"
  ],
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "mota",
        "aliases": [
          "Mota",
          "mota"
        ],
        "extensions": [
          ".mota"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "mota-template",
        "aliases": [
          "Mota Template",
          "mota-template"
        ],
        "extensions": [
          ".template"
        ],
        "configuration": "./language-configuration-template.json"
      }
    ],
    "grammars": [
      {
        "language": "mota",
        "scopeName": "source.mota",
        "path": "./syntaxes/mota.tmLanguage.json"
      },
      {
        "language": "mota-template",
        "scopeName": "source.mota-template",
        "path": "./syntaxes/mota-template.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "mota",
        "path": "./snippets/mota.json"
      },
      {
        "language": "mota-template",
        "path": "./snippets/mota-template.json"
      }
    ]
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/eachcan/mota"
  },
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.60.0",
    "@vscode/vsce": "^3.4.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "scripts": {
    "vscode:prepublish": "echo 'Skipping compile'",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "cd server && npm install && cd ..",
    "package": "vsce package"
  }
}
